{
    "name": "in-line-studio/they-work-for-you",
    "description": "They Work For You Campaigns",
    "type": "craft-plugin",
    "require": {
        "php": ">=8.0.2",
        "craftcms/cms": "^4.7.0",
        "guzzlehttp/guzzle": "^7.0",
        "league/csv": "^9.0"
    },
    "require-dev": {
        "craftcms/ecs": "dev-main",
        "craftcms/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "InLineStudio\\TheyWorkForYou\\": "src/"
        }
    },
    "extra": {
        "handle": "_they-work-for-you",
        "name": "TheyWorkForYou",
        "developer": "in-line.studio",
        "documentationUrl": "",
        "class": "InLineStudio\\TheyWorkForYou\\TheyWorkForYou"
    },
    "scripts": {
        "check-cs": "ecs check --ansi",
        "fix-cs": "ecs check --ansi --fix",
        "phpstan": "phpstan --memory-limit=1G"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0.2"
        },
        "allow-plugins": {
            "yiisoft/yii2-composer": true,
            "craftcms/plugin-installer": true
        }
    }
}
